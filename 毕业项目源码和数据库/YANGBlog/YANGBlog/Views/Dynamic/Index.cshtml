@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/YANG-Blog.cshtml";
}
@using YANGBlog.Models;
@model  List <Dynamic>
<div class="banner">
    <div class="cont w1000">
        <div class="title">
            <h3>MY<br />BLOG</h3>
            <h4>well-balanced heart</h4>
        </div>
        <div class="amount">
            <p><span class="text">访问量</span><span class="access">1000</span></p>
            <p><span class="text">日志</span><span class="daily-record">1000</span></p>
        </div>
    </div>
</div>

<div class="content">
    <div class="cont w1000">
        <div class="title">
            <span class="layui-breadcrumb" lay-separator="|">
                <a href="javascript:;" >文章列表</a>
               
            </span>
        </div>
        <div class="list-item">
            @foreach (var item in Model)
            {
                <div class="item">
                    <div class="layui-fluid">
                        <div class="layui-row">
                            <div class="layui-col-xs12 layui-col-sm4 layui-col-md5">
                                <div class="img"><img src="../res/img/sy_img1.jpg" alt=""></div>
                            </div>
                            <div class="layui-col-xs12 layui-col-sm8 layui-col-md7">
                                <div class="item-cont">
                                    <h3>@item.DynamicHead<button class="layui-btn layui-btn-danger new-icon">new</button></h3>
                                    <h5>设计文章</h5>
                                    <p></p>
                                    <a href="/Dynamic/details?DynamicId=@item.DynamicId" class="go-icon"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div id="demo" style="text-align: center;"></div>
    </div>
</div>

