
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutExam.cshtml";
}

@using Account.Models;

<h2>试卷列表</h2>

<p>
    <a href="/Paper/Create">添加新试卷</a>
</p>
<table class="table">
    <tr>
        <th>
            试卷名
        </th>
        <th>
            试卷说明
        </th>
        <th>
            试卷时长
        </th>
        <th>操作</th>
    </tr>

    @foreach (var item in ViewBag.paper)
    {
        <tr>
            <td>
                @item.PaperName
            </td>
            <td>
                @item.PaperExplain
            </td>
            <td>
                @item.PaperTime
            </td>
            <td>
                <a href="/Paper/PaperCreate/@item.PaperID">添加考题</a> |
                <a href="/Paper/PaperEdit/@item.PaperID ">编辑</a> |
                <a href="/Paper/PaperDetails/@item.PaperID">详情</a> |
                <a href="/Paper/PaperDelete/@item.PaperID">删除</a>
            </td>
        </tr>
    }

</table>
<div style="color: red"></div>

