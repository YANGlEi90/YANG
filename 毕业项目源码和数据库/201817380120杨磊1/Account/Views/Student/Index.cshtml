
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutExam.cshtml";
}




<h2>学生列表</h2>
<p>
    <a href="/Student/Create">添加新的学生</a>
</p>
<table class="table">
    <tr>
        <th>姓名</th>
        <th>登录名</th>
        <th>密码</th>
        <th>性别</th>
        <th>电话</th>
        <th>Email</th>
        <th>班级</th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.list)
    {
        <tr>

            <td>@item.StuName </td>
            <td>@item.StuLoginName </td>
            <td>@item.StuLoginPwd </td>
            <td>
                @if (@item.StuSex)
                {
                    @:男
                }
                else
                {
                    @:女
                }
            </td>
            <td>@item.StuPhone  </td>
            <td>@item.StuEmail  </td>
            <td>@item.StuGrade  </td>
            <td>
                <a href="/Student/StuEdit/@item.StuID">编辑</a> |
                <a href="/Student/StuDetails/@item.StuID">详情</a> |
                <a href="/Student/StuDelete/@item.StuID">删除</a>
            </td>
        </tr>
    }

</table>

