
@{
    ViewBag.Title = "Buy";
}

<h2>Buy ---获得对象集合--【一个人买多张票】</h2>
<form method="post" action="Buy">
    <div class="form-group">
        <input type="text" name="Person[0].Name" placeholder="请输入姓名" />
        <input type="text" name="Person[0].IdCard" placeholder="请输入身份证号" />
        <input type="text" name="Person[0].Phone" placeholder="请输入电话号码" />
    </div>
    <div class="form-group">
        <input type="text" name="Person[1].Name" placeholder="请输入姓名" />
        <input type="text" name="Person[1].IdCard" placeholder="请输入身份证号" />
        <input type="text" name="Person[1].Phone" placeholder="请输入电话号码" />
    </div>
    <div class="form-group">
        <input type="text" name="Person[2].Name" placeholder="请输入姓名" />
        <input type="text" name="Person[2].IdCard" placeholder="请输入身份证号" />
        <input type="text" name="Person[2].Phone" placeholder="请输入电话号码" />
    </div>

    <input type="submit" value="提交" />
</form>

@using ExamDB.Models;
@if (ViewBag.list != null)
{
    foreach (var item in ViewBag.list as List<Person>)
    {
        <h3>@item.Name-----@item.IdCard-------@item.Phone</h3>
    }
}
