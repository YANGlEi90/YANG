
@{
    ViewBag.Title = "Add";
}

<h2>Add--添加老师信息</h2>

<form method="post" action="/Teacher/AddShow">
    <div class="row ">
        <div class="col-lg-12"><input type="text" name="TeacherName" placeholder="请输入姓名" class="form-control"/></div>
    </div>
    <div class="row ">
        <div class="col-lg-12"><input type="text" name="TeacherLoginName" placeholder="请输入账号" class="form-control"/></div>
    </div>
    <div class="row ">
        <div class="col-lg-12"><input type="password" name="TeacherLoginPwd" placeholder="请输入密码" class="form-control"/></div>
    </div>
    <div class="row ">
        <div class="col-lg-12"><input type="text" name="TeacherPhone" placeholder="请输入电话" class="form-control"/></div>
    </div>
    <div class="row ">
        <div class="col-lg-12"><input type="text" name="TeacherEmail" placeholder="请输入邮箱" class="form-control"/></div>
    </div>
    <div class="row ">
        <div class="col-lg-12"> <input type="submit" value="提交" class="btn btn-primary  form-control" /></div>
    </div>
   
</form>
